<%# app/views/admin/news_posts/_form.html.erb %>

<%= form_with(model: [:admin, @news_post], class: "space-y-4", html: { multipart: true }) do |form| %>
  <% if form.object.errors.any? %>
    <div id="error_explanation" class="bg-red-200 text-red-800 p-4 rounded">
      <h2 class="font-bold"><%= pluralize(form.object.errors.count, "erro") %> impediu que esta novidade fosse salva:</h2>
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo, "Título da Novidade:", class: "block text-sm font-medium text-admin-text" %>
    <%= form.text_field :titulo, class: "mt-1 block w-full rounded-md shadow-sm bg-admin-sidebar border-gray-600 text-white focus:ring-admin-accent focus:border-admin-accent" %>
  </div>

  <div>
    <%= form.label :conteudo, "Conteúdo da Novidade:", class: "block text-sm font-medium text-admin-text" %>
    <%= form.text_area :conteudo, rows: 10, class: "mt-1 block w-full rounded-md shadow-sm bg-admin-sidebar border-gray-600 text-white focus:ring-admin-accent focus:border-admin-accent" %>
  </div>

  <div>
    <%= form.label :data_publicacao, "Data de Publicação:", class: "block text-sm font-medium text-admin-text" %>
    <%= form.datetime_field :data_publicacao, class: "mt-1 block w-full rounded-md shadow-sm bg-admin-sidebar border-gray-600 text-white focus:ring-admin-accent focus:border-admin-accent" %>
  </div>

  <div>
    <%= form.label :photo, "Foto (opcional):", class: "block text-sm font-medium text-admin-text" %>
    <% if form.object.photo.attached? %>
      <%= image_tag form.object.photo, class: "w-32 h-32 object-cover rounded-lg mb-2 border border-admin-accent" %>
    <% end %>
    <%= form.file_field :photo, class: "mt-1 block w-full text-sm text-admin-text file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-admin-accent file:text-white hover:file:bg-admin-accent-dark" %>
  </div>

  <div class="mt-6">
    <%= form.submit "Salvar Novidade", class: "bg-admin-accent hover:bg-admin-text text-white font-bold py-2 px-4 rounded-md transition duration-300 cursor-pointer" %>
    <%= link_to 'Voltar', admin_news_posts_path, class: 'ml-4 text-admin-text hover:underline' %>
  </div>
<% end %>