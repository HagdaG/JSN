<%# app/views/admin/vote_links/_form.html.erb %>

<%= form_with(model: [:admin, @vote_link], class: "space-y-4") do |form| %>
  <% if form.object.errors.any? %>
    <div id="error_explanation" class="bg-red-200 text-red-800 p-4 rounded">
      <h2 class="font-bold"><%= pluralize(form.object.errors.count, "erro") %> impediu que este link fosse salvo:</h2>
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Nome do Link:", class: "block text-sm font-medium text-admin-text" %> <%# CORRIGIDO: :title %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md shadow-sm bg-admin-sidebar border-gray-600 text-white focus:ring-admin-accent focus:border-admin-accent" %> <%# CORRIGIDO: :title %>
  </div>

  <div>
    <%= form.label :url, "URL do Link:", class: "block text-sm font-medium text-admin-text" %>
    <%= form.text_field :url, class: "mt-1 block w-full rounded-md shadow-sm bg-admin-sidebar border-gray-600 text-white focus:ring-admin-accent focus:border-admin-accent" %>
  </div>

  <div>
    <%= form.label :description, "Descrição (opcional):", class: "block text-sm font-medium text-admin-text" %>
    <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md shadow-sm bg-admin-sidebar border-gray-600 text-white focus:ring-admin-accent focus:border-admin-accent" %>
  </div>

  <div>
    <%= form.label :is_active, class: "inline-flex items-center" do %>
      <%= form.check_box :is_active, class: "rounded border-gray-300 text-admin-accent shadow-sm focus:ring-admin-accent" %>
      <span class="ml-2 text-sm text-admin-text">Ativo?</span>
    <% end %>
  </div>

  <div class="mt-6">
    <%= form.submit "Salvar Link", class: "bg-admin-accent hover:bg-admin-text text-white font-bold py-2 px-4 rounded-md transition duration-300 cursor-pointer" %>
    <%= link_to 'Voltar', admin_vote_links_path, class: 'ml-4 text-admin-text hover:underline' %>
  </div>
<% end %>