<%# app/views/admin/partners/index.html.erb %>

<h1 class="text-3xl font-bold mb-6 text-admin-accent">Gerenciar Colaboradores (Admin)</h1> <%# NOVO TÍTULO %>

<%# Botão para adicionar novo administrador (se você quiser permitir no admin) %>
<div class="mb-4">
  <%= link_to 'Adicionar Novo Colaborador', new_admin_partner_path, class: 'bg-admin-accent hover:bg-admin-text text-white font-bold py-2 px-4 rounded-md transition duration-300' %> <%# NOVO HELPER DE ROTA %>
</div>

<% if @partners.any? %> <%# CORRIGIDO: Agora usa @partners %>
  <table class="min-w-full bg-admin-sidebar rounded-lg shadow-md">
    <thead>
      <tr>
        <th class="py-3 px-4 text-left text-admin-text border-b border-admin-bg">Nome</th>
        <th class="py-3 px-4 text-left text-admin-text border-b border-admin-bg">Admin Principal?</th>
        <th class="py-3 px-4 text-left text-admin-text border-b border-admin-bg">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @partners.each do |partner| %> <%# CORRIGIDO: Agora itera sobre @partners, e a variável é admin_user %>
        <tr class="border-b border-admin-bg">
          <td class="py-3 px-4"><%= partner.name.presence || "Não Definido" %></td>
          <td class="py-3 px-4">
            <%# Botão de Editar (Lápis Amarelo) %>
            <%= link_to edit_admin_partner_path(partner), class: 'text-yellow-400 hover:text-yellow-600 mr-2 transition-colors duration-200' do %> <%# NOVO HELPER DE ROTA %>
              <i class="fas fa-pencil-alt text-lg"></i>
            <% end %>
            <%# Botão de Excluir (Lixeira Vermelha) - Não permitir que o admin exclua a si mesmo %>
            
              <%= button_to admin_partner_path(partner),
                            method: :delete,
                            data: { turbo_confirm: "Tem certeza que deseja excluir o colaborador ?" },
                            class: 'text-red-500 hover:text-red-700 transition-colors duration-200' do %> <%# NOVO HELPER DE ROTA %>
                <i class="fas fa-trash-alt text-lg"></i>
              <% end %>
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-admin-text mt-4">Nenhum colaborador cadastrado ainda.</p> <%# NOVO TEXTO %>
<% end %>

<div class="text-center mt-12">
  <%= link_to 'Voltar para o Painel Principal', admin_dashboard_path, class: 'bg-admin-accent hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-md transition duration-300' %>
</div>