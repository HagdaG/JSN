<%# app/views/admin/dashboard/index.html.erb - Somente HTML para os Gráficos (FINAL) %>

<div class="p-8">
  <h1 class="text-3xl font-bold mb-6 text-admin-accent">Dashboard Administrativo</h1>
  <p class="text-xl text-admin-text mb-8">Vamos ver os dados de hoje!</p>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <%# Card: Mensagens por Status (Gráfico de Rosca) %>
    <div class="bg-admin-sidebar p-6 rounded-lg shadow-lg flex flex-col justify-between">
      <h2 class="text-xl font-bold text-admin-text mb-4">Mensagens por Status</h2>
      <div class="flex-grow flex items-center justify-center h-48">
        <%# Garante que há dados e que a soma deles é maior que zero para exibir o gráfico %>
        <% if @messages_by_status.present? && @messages_by_status.values.sum > 0 %> 
          <canvas id="messagesByStatusChart"></canvas> <%# Elemento Canvas para o gráfico de Rosca %>
        <% else %>
          <p class="text-admin-text text-center">Nenhuma mensagem disponível para status.</p>
        <% end %>
      </div>
      <p class="text-sm text-gray-500 text-center mt-2">Distribuição das mensagens (Aprovadas, Pendentes, Rejeitadas)</p>
    </div>

    <%# Card: Mensagens Recebidas (Últimas 8 Semanas - Gráfico de Linha) %>
    <div class="bg-admin-sidebar p-6 rounded-lg shadow-lg flex flex-col justify-between">
      <h2 class="text-xl font-bold text-admin-text mb-4">Mensagens Recebidas (Últimas 8 Semanas)</h2>
      <div class="flex-grow flex items-center justify-center h-48">
        <%# Garante que há dados e que a soma deles é maior que zero para exibir o gráfico %>
        <% if @recent_messages_trend.present? && @recent_messages_trend.values.sum > 0 %>
          <canvas id="recentMessagesTrendChart"></canvas> <%# Elemento Canvas para o gráfico de Linha %>
        <% else %>
          <p class="text-admin-text text-center">Nenhuma mensagem recente disponível para tendência.</p>
        <% end %>
      </div>
      <p class="text-sm text-gray-500 text-center mt-2">Tendência de novas mensagens recebidas no site.</p>
    </div>
  </div>
</div>
